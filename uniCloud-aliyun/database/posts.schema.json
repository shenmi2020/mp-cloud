// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
  "bsonType": "object",
  "required": [],
  "permission": {
    "read": false,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
    "user_id": {
      "bsonType": "string",
      "description": "用户id"
    },
    "content": {
      "bsonType": "string",
      "description": "内容"
    },
    "picture": {
      "bsonType": "string",
      "description": "图片"
    }
  }
}